<aura:component  implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction,lightning:actionOverride,lightning:isUrlAddressable" access="global" >
    <aura:attribute name="spinner" type="boolean" default="false" />
    <aura:attribute name="recordId" type="string"/>
    <aura:attribute name="showpopup" type="Boolean" default="true"/>
     <aura:attribute name="campaignType" type="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
      <aura:attribute name="formFactor" type="string"/>
    <!-- Modal -->
        <lightning:recordEditForm  objectApiName="Campaign"   aura:id="campaign" onsuccess="{!c.handleSuccess}" onerror="{!c.handleError}"> 
            <div data-id="editDialog" aura:id="model" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal  slds-fade-in-open slds-modal_full slds-modal_medium slds-backdrop " >     
                <div class="slds-modal__container">
                    <aura:if isTrue="{!v.formFactor == 'DESKTOP'}">
                    <lightning:buttonIcon iconName="utility:close"  onclick="{!c.closeModal}"  alternativeText="close"  variant=""  class="slds-modal__close"/>
                    </aura:if>
                        <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate"> New Campaign</h2>
                    </header>
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <lightning:messages />
                        <div style="text-align:right;"> <abbr class="slds-required" title="required" >*											
                            </abbr>= Required Information</div>
                        <div class="slds-section slds-is-open">
                            <h3 class="slds-section__title slds-theme_shade slds-section__title slds-theme--shade primaryPaletteBorder test-id__section-header-container">
                                <span class="slds-truncate slds-p-horizontal_small" title="Section Title">Campaign Information</span>
                            </h3>
                            <br/>
                            <div class="slds-grid slds-gutters slds-wrap slds-p-horizontal_xx-small">
                                
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Name" required="true"/>
                                </div>
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Type" required="true" value="{!v.campaignType}"/>
                                </div>
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Campaign_Source__c" required="true"/>
                                </div>
                                 <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Campaign_Medium__c" required="true"/>
                                </div>
                                    <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Budget_Source__c" required="true"/>
                                </div>
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="StartDate" required="true"/>
                                </div>
                              
                                 <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Country_Code__c" required="{!v.campaignType=='Telephony'}"/>
                                </div>
                                  <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="EndDate"/>
                                </div>
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="Landing_Number__c" required="{!v.campaignType=='Telephony'}"/>
                                </div>
                              
                                <div class="slds-size_1-of-2 slds-max-small-size_1-of-1 slds-p-horizontal_small">
                                    <lightning:inputField fieldName="BudgetedCost" required="true"/>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                    <div class="slds-modal__footer ">
                        <lightning:button label="Cancel" onclick="{!c.closeModal}" />
                        <button class="slds-button slds-button_brand btnsubmit"  type="submit" > Save </button>
                        
                    </div>  
                </div>
            </div>
        </lightning:recordEditForm>
        
</aura:component>